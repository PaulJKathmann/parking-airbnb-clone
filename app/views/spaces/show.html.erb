<div class="container pt-5">
  <h1 class="text-center pb-3"><%= @space.address %></h1>
  <%= image_tag("Space_map.png", style: "object-fit:cover; width: 100%;
    height: 400px;
    max-width: 100%" , class: "mx-auto", alt: "Map") %>
    <div class="space-card row py-4 px-3">
      <%= image_tag("parking_space.jpg", style: "object-fit:cover; height: 250px; width: 250px") %>
      <div class="card flex-grow-1">
        <div class="card-body d-flex justify-content-between">
         <div>
          <h3 class="card-title">Address:<%= @space.address%></h3>
          <p class="card-text">Available from <%= @space.start_date%> to <%= @space.end_date%></p>
          <p class="card-text">Size: <%= @space.size%></p>
         </div>
         <div class="flex-column justify-content-between">
          <h3 class="card-text">Price/Day: <%= @space.price %> Euro</h3>
          </div>
        </div>
      </div>
    </div>

      <div style="position: relative">
        <%= link_to "Book now", new_space_booking_path(@space), class: "button", style: "position: absolute; right: 8px"%>
        <!-- <a href="#" class="button" style=" position: absolute; right: 8px"> Book now</a> -->
      </div>

</div>
