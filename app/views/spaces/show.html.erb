<div class="container pt-5">
  <h1 class="text-center pb-3">Parking Space 1224 (Kreuzberg)</h1>
  <%= image_tag("Space_map.png", style: "object-fit:cover; width: 100%;
    height: 400px;
    max-width: 100%" , class: "mx-auto", alt: "Map") %>
    <div class="space-card row py-4 px-3">
      <%= image_tag("parking_space.jpg", style: "object-fit:cover; height: 250px; width: 250px") %>
      <div class="card">
        <div class="card-body d-flex justify-content-between">
         <div>
          <h5 class="card-title">Address:<%= @space.address%></h5>
          <p class="card-text">Available from <%= @space.start_date%> to <%= @space.end_date%></p>
          <p class="card-text"> <%= @space.size%></p>
         </div>

         <div>
          <p class="card-text">Price/Day: <%= @space.price %> Euro</p>
          <a href="#" class="button"> Go to this booking</a>
          </div>
        </div>
      </div>
    </div>

</div>
