
<% user = @bookings.first.user %>
<% spaces = user.spaces  %>
<div class="container">
  <% user.spaces.each do  |space| %>
    <div class="container">
      <div class="card mb-1" style="width: 600px; flex-direction: row; padding: 10px;" >
        <%  if space.photo %>
         <%= cl_image_tag(space.photo, width: 160, height: 160, crop: :fill) %>
        <% end  %>

        <div class="card-body" >
          <h5 class="card-title" style="margin: 0; padding: 0;"><%= space.address %></h5>
          <p class="card-text" style="margin: 0; padding: 0;">Price: <%= space.price %> euro</p>
          <p class="card-text mb-2" style="margin: 0; padding: 0;">Size: <%= space.size %> m^2</p>
          <%= link_to "edit", space_path(space), class: "button" %>
        </div>
      </div>
      <div class="container">
        <% space.bookings.each do |booking| %>
          <div class="card">
            <% if booking.status == "confirmed" %>
              <div class="card-header bg-success">
                <h6 class="my-0" style= "height: 16px;"> Status: <%=booking.status%></h6>
              </div>
            <% end %>
            <% if booking.status == "pending" %>
              <div class="card-header bg-warning">
                <h6 class="my-0" style= "height: 16px;"> Status: <%=booking.status%></h6>
                <p>reject</p>
                <p>aproove</p>
              </div>
            <% end %>
            <% if booking.status == "rejected" %>
              <div class="card-header bg-danger">
                <h6 class="my-0" style= "height: 16px;"> Status: <%=booking.status%></h6>
              </div>
            <% end %>
            <div class="card-body d-flex justify-content-between">
              <div>
              <h5 class="card-title">Address: <%=booking.space.address%></h5>
              <p class="card-text">From <%=booking.start_date%>  To  <%=booking.end_date%></p>
              <p class="card-text"> Size: <%=booking.space.size%> m²</p>
              </div>
              <div>
                <p class="card-text">Total: <%= booking.cost %> €</p>
                    <%= link_to "Go to this booking", booking_path(booking), class: "button" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
