<div class="container py-5">
  <h1 class="text-center">Book your space!</h1>

  <div class="space-info">
    <div class="space-card row py-4 px-3">
      <%= image_tag("parking_space.jpg", style: "object-fit:cover; height: 250px; width: 250px") %>
      <div class="card flex-grow-1">
        <div class="card-body d-flex justify-content-between">
         <div>
          <h3 class="card-title">Address:<%= @space.address%></h3>
          <p class="card-text">Available from <%= @space.start_date%> to <%= @space.end_date%></p>
          <p class="card-text">Size: <%= @space.size%></p>
         </div>
         <div class="flex-column justify-content-between">
          <h3 class="card-text">Price/Day: <span id="daily-price"><%= @space.price %> </span>€</h3>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="card">
    <p class="text-center">Pick your timeframe:</p>
    <%= simple_form_for([@space, @booking]) do |f| %>
      <div class="row" id="date-picker">
        <div class="col">
          <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker", id: "start_date"} %>
        </div>
        <div class="col">
          <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker", id: "end_date"} %>
        </div>
      </div>
  </div>
    <div class="card my-5">
      <div class="row justify-content-between">
        <div class="payment-method">
          <h4>Payment Method:</h4>
          <p>Card Holder: <%= @booking.user %></p>
          <p>Visa: 4567 3456 1223 1223 09</p>
          <p>CVC: 084</p>
        </div>
        <div class="cost">
          <h3>Total Cost: <span id="total-cost"><%= @space.price %></span><span>€</span></h3>
        </div>
      </div>
    </div>
    <div class="float-right py-3">
      <%= f.submit "Confirm booking", class: 'button'  %>
    </div>
    <% end %>
</div>
<%= javascript_pack_tag "calculation" %>


